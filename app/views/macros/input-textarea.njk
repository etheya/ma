{% macro textarea (
    classes = "",
    cols = "100",
    data = {},
    hidden = false,
    hint = "",
    label = "",
    labelHidden = false,
    maxlength = "",
    name = "",
    rows = "5",
    target = "",
    value = ""
) %}
    <div class="form-group{% if hidden %} panel panel-border-narrow js-hidden{% endif %}"{% if target %} id="{{ target }}"{% endif %}>
        <label class="form-label{% if labelHidden %} visually-hidden{% endif %}" for="{{ name }}-{{ value }}">{{ label }}</label>
        {% if hint %}<span class="form-hint" id="{{ name }}-hint">{{ hint }}</span>{% endif %}
        <textarea class="form-control{% if classes %} {{ classes }}{% endif %}"{% if maxlength %} maxlength="{{ maxlength }}"{% endif %}{% if cols %} cols="{{ cols }}"{% endif %}{% if rows %} rows="{{ rows }}"{% endif %} name="{{ name }}-{{ value }}" id="{{ name }}-{{ value }}" value="{{ data['value'] }}"></textarea>
    </div>
{% endmacro %}
