{% macro checkbox (
    data = {},
    hint = false,
    id = "",
    label = "",
    name = "",
    next = "",
    redirect = "",
    target = "",
    selected = false,
    value = ""
) %}
{% if redirect %}
    {% set dataValue = label + ', redirect(' + redirect + ')' %}
{% else %}
    {% set dataValue = label %}
{% endif %}
    <div class="multiple-choice"{% if target %} data-target="{{ target }}"{% endif %}>
        <!-- <input type="checkbox" name="{{ name }}" id="{{ name }}-{{ id }}" value="{{ dataValue }}"{% if hint %} aria-describedby="{{ hint }}"{% endif %} {{ checked("{{ name }}", "data['label']") }} /> -->
        <input type="checkbox" name="{{ "next-page" if next else name }}" id="{{ name }}-{{ id }}" value="{{ dataValue }}"{% if hint %} aria-describedby="{{ name }}-hint"{% endif %}{% if selected %} checked="checked"{% elif label == data[name] %} checked="checked"{% endif %} />
        <label for="{{ name }}-{{ id }}">{{ label }}</label>
    </div>
{% endmacro %}