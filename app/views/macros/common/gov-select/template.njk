{% set setId = id %}
{% if not id %}
    {% set id="select-" + name %}
{% endif %}

{% set valueSet = data[name] %}
{% if value %}
    {% set valueSet = value %}
{% endif %}

<div id="{{id}}-form" class="form-group{% if classes.formGroup %} {{classes.formGroup}}{% endif %}{% if error %} error{% endif %}">
    <label for="{{ id }}">
        <span class="{% if classes.label %}{{ classes.label }}{% else %}form-label-bold{% endif %}">{{ label }}</span>
        {% if hint %}<span class="form-hint">{{hint}}</span>{% endif %}
        {% if error %}<span class="error-message">{{error}}</span> {% endif %}
    </label>
    
    <select class="form-control{% if classes.selectClass %} {{classes.selectClass}}{% endif %}" id="{{ id }}" name="{{name}}">
        {% if placeholder %}<option value="">{{ placeholder }}</option>{% endif %}        
        {% for option in options %}
            <option value="{{ option[1] }}"
            {% if valueSet == option[1] %} selected{% endif %}>{{ option[0] }}</option>
        {% endfor %}
    </select>
</div>
